    <div class="row">
        <h1 style="text-align:center">Create a new Campgrounds</h1>
        <div style="width: 30%; margin: 25px auto;">
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <label for="name">Campground name</label>
                        <input class="form-control" name="name" type="text" placeholder="Enter name"> 
                    </div>
                    <div class="form-group">
                        <label for="price">Price per night</label>
                        <input class="form-control" name="price" type="number" placeholder="Enter price" min="0.01" step="0.01"> 
                    </div>
                    <div class="form-group">
                        <label for="location">Address</label>
                       <input class="form-control" name="location" type="text" placeholder="Enter location"> 
                    </div>
                    <div class="form-group">
                        <label for="image">Image URL</label>
                       <input class="form-control" name="image" type="text" placeholder="http://image/address.com"> 
                    </div>
                    <div class="form-group">
                        <label for="description">Short description</label>
                        <input class="form-control" name="description" type="text" placeholder="Enter description"> 
                    </div>
                    <div class="form-group">
                        <input class="btn btn-lg btn-primary btn-block" type="submit"> 
                    </div>
                 </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>